{{#each posts}}
{{!-- {{> postPartial}} --}}
<div class="post">
<h2 class="post-title">{{this.title}}</h2>
<p>Created by: {{this.creatorId.username}}</p>
<p>{{content}}</p>
<img src="{{picPath}}" alt="{{picName}}">
<br>
<p>Comments: {{this.comments.length}}</p>
<a href="/posts/{{this.id}}">Comment</a>
</div>
{{else}}
<p>There are no posts at this moment 🤦🏻‍♂️</p>
{{/each}}